# Modero Environment Configuration
# Copy this file to .env and fill in the values

# Environment: dev | prod
ENVIRONMENT=dev

# Server
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=DEBUG

# Google Cloud STT
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-stt.json

# Gemini API
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# JWT Security
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Database
DATABASE_URL=sqlite+aiosqlite:///./app.db
# For production: postgresql+asyncpg://user:pass@host:5432/modero
